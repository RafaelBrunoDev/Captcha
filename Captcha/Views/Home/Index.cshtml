@{
    ViewBag.Title = "Home Page";
}

<main>
    <!DOCTYPE html>
    <html>
    <head>
        <title>Cadastro de Email</title>
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
        <script>
            function cadastrarEmail() {
                var email = document.getElementById('email').value;
                var captchaResponse = grecaptcha.getResponse();

                if (captchaResponse.length === 0) {
                    alert("Por favor, preencha o reCAPTCHA.");
                    return;
                }

                var model = new EmailModel();
                model.cadastrarEmail(email);

                alert("Cadastro concluído com sucesso!");
            }

            function EmailModel() {
                this.cadastrarEmail = function (email) {
                    console.log("Salvando o email no banco de dados: " + email);
                };
            }

        </script>
    </head>
    <body>
        <h1>Cadastro de Email</h1>
        <label for="email">Email:</label>
        <input type="email" id="email" required>

        <div class="g-recaptcha" data-sitekey="6LfMYLAoAAAAACINVS-t9naF_oZs3dNZpkAOoPt1"></div>

        <button type="button" onclick="cadastrarEmail()">Cadastrar</button>
    </body>
</html>

</main>